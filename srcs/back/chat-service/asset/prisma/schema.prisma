datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "./prisma_client"
}

model Channel {
  id Int @id @unique @default(autoincrement())
  hash String
}

model Msg {
  id Int @id @unique @default(autoincrement())
  userID Int
  channelID Int
  channel Channel @relation(fields: [channelID], references: [id])
  createdAt DateTime @default(now())
  text String
}
